<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Dashboard" 
        MinHeight="600" MinWidth="1100"
        WindowStartupLocation="CenterScreen"
         WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
         >
    <Border CornerRadius="10" >

        <!--This is for the border radius or corner radius of the window-->

        <Border CornerRadius="10"
              BorderBrush="#3D7E35"
              BorderThickness="2"
               >



            <Border.Background>
                <SolidColorBrush Color="#F4F5F6"/>

            </Border.Background>

            <Grid>

                <Grid.RowDefinitions>

                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


           
                
                <!-- Green border in row 0-->
                <Border Grid.Row="0"
                        Background="#3D7E35"
                        Margin="0,0,0,0"
                        CornerRadius="5,5,0,0"
                        Effect="{StaticResource dropShadow}">


                    <!--Grid for borderstyle design-->
                    <Grid Grid.Row="0" Width="200" HorizontalAlignment="Right">


                        <Grid.ColumnDefinitions>

                            <!--Notification bell button-->
                            
                            
                            
                            <!--Minimize button-->
                            <ColumnDefinition/>
                            
                            <ColumnDefinition/>

                            <!--Maximize button-->
                            <ColumnDefinition/>

                            <!--Close button-->
                            <ColumnDefinition/>

                        </Grid.ColumnDefinitions>

                        <!--Bell button-->
                        <Button x:Name="Notif"
                           Style="{StaticResource MinimizeButtonStyle}" Margin="-46,0,46,0"

>
                            <Icon:PackIconMaterial 
                            x:Name="BellIcon"
                            Kind="Bell" 
                            Grid.Column="0"
                            Height="16" RenderTransformOrigin="0.803,0.533"
                            Width="16"
                            Style="{StaticResource WindowControlIcon}"
                            Cursor="Hand"
                            />


                        </Button>





                        <!--Minimize button-->
                        <Button x:Name="Minimize" Grid.Column="1" Click="Minimize_Click"
                            Style="{StaticResource MinimizeButtonStyle}"

 >
                            <Icon:PackIconMaterial 
                             x:Name="MinimizeWindow"
                             Kind="Minus" 
                             Grid.Column="1"
                             Height="10" RenderTransformOrigin="0.803,0.533"
                             Width="12"
                             Style="{StaticResource WindowControlIcon}"
                             Cursor="Hand"
                             />


                        </Button>
                        
                        <!--Maximize button-->

                        <Button x:Name="Maximize" Grid.Column="2" Click="Maximize_Click"
                           Style="{StaticResource MinimizeButtonStyle}"
>

                                    <Icon:PackIconMaterial 
                                      x:Name="MaximizeWindow"
                                      Kind="WindowMaximize" 
                                      Grid.Column="2"
                                      Height="10" RenderTransformOrigin="0.803,0.533"
                                      Width="12"
                                     Style="{StaticResource WindowControlIcon}"
                                    Cursor="Hand"
                                />

                        </Button>


                        <!--Button btnClose -->

                        <Button x:Name="Close" Grid.Column="3" Click="Close_Click"
                           Style="{StaticResource MinimizeButtonStyle}"
>

                            <Icon:PackIconMaterial 
                            x:Name="CloseWindow"
                            Kind="WindowClose" 
                            Grid.Column="3"
                            Height="10" RenderTransformOrigin="0.803,0.533"
                            Width="12"
                             Style="{StaticResource WindowControlIcon}"
                            Cursor="Hand"
                        />

                        </Button>


                    </Grid>

                </Border>
                
                
                <!--Grid for row 1 -->
                <Grid Grid.Row="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>






                    <!-- Sidebar -->


                    <Border Grid.Column="0"
                            Background="White"
                            BorderBrush="#3D7E35"
                            BorderThickness="0.5"
                            Padding="10" Margin="0,0,2,0"
                            CornerRadius="0,0,0,10"
                            Effect="{StaticResource dropShadow}">

                        <!--The panel that holds the buttons-->
                        <StackPanel>

                            <!--The border for the profile -->
                            <Border Width="80" Height="80" Background="White" BorderThickness="4" CornerRadius="40" Margin="0,6,0,0">

                                <!--The ellipse that shapes the image to circle-->
                                <Ellipse>
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="pack://application:,,,/Resources/LogoUm.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>



                            </Border>

                            <!--Textblock for the name of admin-->

                            <!--Buttons in the sidebar-->

                            <!--Dashboard-->
                            <Button x:Name="DashboardOverview" Style="{StaticResource menuButton}"  Foreground="White" Margin="0,50,0,5"
                                    Cursor="Hand" Width="160" Click="DashboardOverview_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Menu" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Dashboard"  FontFamily="Roboto"/>
                                </StackPanel>
                            </Button>

                            <!--Professors-->

                            <Button x:Name="ProfessorBtn" Style="{StaticResource menuButton}"  Foreground="White" Margin="5"
                                 Cursor="Hand" Width="160" Click="ProfessorBtn_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="AccountCircle" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Professors" FontFamily="Roboto"/>
                                </StackPanel>
                            </Button>


                            <Button x:Name="ProgamBtn" Style="{StaticResource menuButton}"  Foreground="White" Margin="5"
                                Cursor="Hand" Width="160"
                                Click="ProgamBtn_Click_1">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="School" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Programs" FontFamily="Roboto"/>
                                </StackPanel>
                            </Button>



                            <!--Departments-->

                            <Button x:Name="DepartmentBtn" Style="{StaticResource menuButton}"  Foreground="White" Margin="5"
                                    Cursor="Hand" Width="160" Click="DepartmentBtn_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Domain" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Departments"  FontFamily="Roboto"/>
                                </StackPanel>
                            </Button>

                            <!--Subjects-->

                            <Button x:Name="Subjects" Style="{StaticResource menuButton}"  Foreground="White" Margin="5"
                                 Cursor="Hand" Width="160" Click="Subjects_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Bookshelf" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Subjects"  FontFamily="Roboto"/>
                                </StackPanel>
                            </Button>


                            <!--Staffs-->
                            <Button Style="{StaticResource menuButton}" Foreground="White" Margin="5"
                                     Cursor="Hand" Width="160">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="AccountSupervisor" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Staffs"  FontFamily="Roboto"/>
                                </StackPanel>
                            </Button>

                            <!--Students-->
                            <Button x:Name="StudentsBtn" Style="{StaticResource menuButton}" Foreground="White" Margin="5"
                               Cursor="Hand" Width="160" Click="StudentsBtn_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="BookEducation" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Students"  FontFamily="Roboto"/>
                                </StackPanel>
                            </Button>



                            <!--Logout-->

                            <Button Style="{StaticResource menuButton}" Foreground="White" Margin="5"
                                                  Cursor="Hand" Width="160" >
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Cog" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Settings"  FontFamily="Roboto"/>
                                </StackPanel>
                            </Button>





                        </StackPanel>
                    </Border>




                    <!-- Main Content Area -->
                    <Border Grid.Column="1"
                            Background="White"
                            Margin="8"
                            CornerRadius="4"
                            >


                        <!--Name of the MainContentArea where the user control will appear-->
                        <ContentControl x:Name="MainContentArea">



                        </ContentControl>

                    </Border>

                </Grid>



                <!--This is for header row which in the row 0-->
                <Grid>
                    <Grid.ColumnDefinitions>


                        <!--Column for the logo picture-->
                        <ColumnDefinition/>
                        <!--Column for Minimize-->
                        <ColumnDefinition Width="35"/>
                        <!--Column for maximize-->
                        <ColumnDefinition Width="35"/>
                        <!--Column for Close-->

                        <ColumnDefinition Width="35"/>



                    </Grid.ColumnDefinitions>




                 






                </Grid>


            </Grid>





        </Border>
    </Border>
</Window>
