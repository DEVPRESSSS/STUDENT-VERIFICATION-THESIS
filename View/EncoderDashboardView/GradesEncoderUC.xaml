<UserControl x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.EncoderDashboardView.GradesEncoderUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.EncoderDashboardView" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             xmlns:viewmodel="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:GradeViewModel}"
             mc:Ignorable="d" 
             Background="#F5F7FA"
             d:DesignHeight="650" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- Search Box Style -->
        <Style x:Key="ModernSearchBox" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="32,8,8,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         Margin="{TemplateBinding Padding}"
                                         VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter Combo Box Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6">
                                <Grid>
                                    <ToggleButton Name="ToggleButton"
                                                  Template="{DynamicResource ComboBoxToggleButton}"
                                                  Focusable="false"
                                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"/>
                                    <ContentPresenter Name="ContentSite"
                                                     Content="{TemplateBinding SelectionBoxItem}"
                                                     ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                     ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                     Margin="{TemplateBinding Padding}"
                                                     VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                     HorizontalAlignment="Left"/>
                                    <Popup Name="Popup"
                                           Placement="Bottom"
                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                           AllowsTransparency="True"
                                           Focusable="False"
                                           PopupAnimation="Slide">
                                        <Grid Name="DropDown"
                                              SnapsToDevicePixels="True"
                                              MinWidth="{TemplateBinding ActualWidth}"
                                              MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                            <Border x:Name="DropDownBorder"
                                                    Background="White"
                                                    BorderBrush="#E2E8F0"
                                                    BorderThickness="1"
                                                    CornerRadius="6"/>
                                            <ScrollViewer Margin="0,4">
                                                <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                            </ScrollViewer>
                                        </Grid>
                                    </Popup>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ModernActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3182CE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2B6CB0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Enhanced Grid Edit Button -->
        <Style x:Key="EnhancedGridEditButton" BasedOn="{StaticResource gridEditButton}" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="#EBF8FF"/>
            <Setter Property="BorderBrush" Value="#63B3ED"/>
        </Style>

        <!-- Enhanced Grid Remove Button -->
        <Style x:Key="EnhancedGridRemoveButton" BasedOn="{StaticResource gridRemoveButton}" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Background" Value="#FFF5F5"/>
            <Setter Property="BorderBrush" Value="#FC8181"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                  Text="Student Grades Management" 
                  FontSize="22" 
                  FontWeight="Bold" 
                  Foreground="#1A365D"
                  Margin="0,0,0,15"/>

        <!-- Search and Filter Tools -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid>
                    <!-- Search Box -->
                    <TextBox x:Name="UsernameXZ"
                        Style="{StaticResource TextBoxesForm}"
                        Width="283"
                        Margin="31,0,0,0"
                        Background="White" 
                        Height="36"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        MaxLength="50"
                        Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                        />


                    <!-- Search Icon -->
                    <Icon:PackIconMaterial Kind="Magnify"
                               Foreground="#718096"
                               Width="16"
                               Height="16"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"
                               HorizontalAlignment="Left"
                               IsHitTestVisible="False"/>
                    <!-- Prevents it from blocking input -->
                </Grid>

                <!-- Search Button -->
            </Grid>


            <!-- School Year Filter -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       Margin="10,0,0,0">
                <TextBlock Text="School Year:" 
                          FontSize="14" 
                          Foreground="#4A5568" 
                          VerticalAlignment="Center" 
                          Margin="0,0,10,0"/>

                <ComboBox 
                        Style="{StaticResource ModernComboBox}"
                         Width="134"
                         ItemsSource="{Binding SchoolYearCollection}"
                         DisplayMemberPath="SY"
                         SelectedValuePath="SchoolYearID"
                         SelectedValue="{Binding Selected_syID}"
                         ToolTip="Filter by School Year"/>
            </StackPanel>

            <!-- Export/Add Buttons -->
            <StackPanel Grid.Column="2" 
                       Orientation="Horizontal" 
                       Margin="15,0,0,0">
                <!--<Button Style="{StaticResource ModernActionButton}"
                       Width="Auto"
                       Background="#38A169"
                       Padding="15,8">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="FileExcel" 
                                              Width="16" 
                                              Height="16" 
                                              VerticalAlignment="Center" 
                                              Margin="0,0,8,0"/>
                        <TextBlock Text="Export" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>-->

                <Button Style="{StaticResource ModernActionButton}"
                       Width="Auto"
                       Margin="10,0,0,0"
                       Background="#38A169"
                       Padding="15,8">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Plus" 
                                              Width="16" 
                                              Height="16" 
                                              VerticalAlignment="Center" 
                                              Margin="0,0,8,0"/>
                        <TextBlock Text="New" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Grades Data Grid -->
        <Border Grid.Row="2"
               Background="White"
               CornerRadius="8"
               BorderBrush="#E2E8F0"
               BorderThickness="1"
               Effect="{StaticResource dropShadow}">

            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                          Text="Student Grades" 
                          FontSize="16" 
                          FontWeight="SemiBold" 
                          Foreground="#2D3748"
                          Margin="0,0,0,15"/>

                <DataGrid Grid.Row="1"
                         RowStyle="{DynamicResource DataGridRowStyle1}" 
                         ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                         CellStyle="{DynamicResource DataGridCellStyle1}" 
                         x:Name="gradesDataGrid" 
                         Style="{DynamicResource DataGridStyle1}"
                         ItemsSource="{Binding GradeCollection}"
                         SelectedItem="{Binding Selected_grades, Mode=TwoWay}"
                         AutoGenerateColumns="False"
                         BorderThickness="0"
                         Background="Transparent"
                         RowHeight="46"
                         GridLinesVisibility="None">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Name" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border Width="32" 
                                               Height="32" 
                                               CornerRadius="16" 
                                               Background="#EBF4FF"
                                               Margin="0,0,10,0">
                                            <Icon:PackIconMaterial Kind="Account" 
                                                                  Width="16" 
                                                                  Height="16" 
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  Foreground="#4299E1"/>
                                        </Border>
                                        <TextBlock Text="{Binding Student.Name, UpdateSourceTrigger=PropertyChanged}" 
                                                  TextWrapping="NoWrap"
                                                  TextTrimming="CharacterEllipsis"
                                                  VerticalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Course Code" 
                                           Binding="{Binding Subject.CourseCode}" 
                                           IsReadOnly="True" 
                                           Width="*"/>

                        <DataGridTextColumn Header="Semester" 
                                           Binding="{Binding Subject.Semester.SemesterName}" 
                                           IsReadOnly="True" 
                                           Width="*"/>

                        <DataGridTextColumn Header="Year" 
                                           Binding="{Binding Subject.Year.Name}" 
                                           IsReadOnly="True" 
                                           Width="*"/>

                        <DataGridTemplateColumn Header="Final Grade" Width="*" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource GradeBorderStyle}">
                                        <TextBlock Text="{Binding GradeValue, StringFormat={}{0:F0}}" 
                                                  Style="{StaticResource GradeTextBlockStyle}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Date Encoded" 
                                           Binding="{Binding DateAssigned, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                           IsReadOnly="True" 
                                           Width="*"/>

                        <DataGridTextColumn Header="School Year" 
                                           Binding="{Binding SY.SY}" 
                                           IsReadOnly="True" 
                                           Width="*"/>

                        <DataGridTextColumn Header="Encoder" 
                                           Binding="{Binding User.Name}" 
                                           IsReadOnly="True" 
                                           Width="*"/>

                        <DataGridTemplateColumn Header="Actions" 
                                                Width="*" 
                                                IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource gridEditButton}" 
                                               Click="Button_Click_2"
                                               ToolTip="Edit Grade">
                                            <StackPanel Orientation="Horizontal">
                                                <Icon:PackIconMaterial Kind="PencilOutline" 
                                                                      Width="14" 
                                                                      Height="14"
                                                                      VerticalAlignment="Center"/>

                                            </StackPanel>
                                        </Button>

                                        <Button Style="{StaticResource gridRemoveButton}"
                                               Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteGradeCommand}"
                                               ToolTip="Delete Grade">
                                            <StackPanel Orientation="Horizontal">
                                                <Icon:PackIconMaterial Kind="DeleteOutline" 
                                                                      Width="14" 
                                                                      Height="14"
                                                                      VerticalAlignment="Center"/>

                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Summary Info -->
        <Border Grid.Row="3"
               Background="White"
               CornerRadius="8"
               BorderBrush="#E2E8F0"
               BorderThickness="1"
               Margin="0,15,0,0"
               Padding="15"
               Effect="{StaticResource dropShadow}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Total Records" 
                              FontSize="12" 
                              Foreground="#718096"/>
                    <TextBlock Text="{Binding GradeCollection.Count}" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="#2D3748"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Average Grade" 
                              FontSize="12" 
                              Foreground="#718096"/>
                    <TextBlock Text="87.5" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="#2D3748"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="Last Updated" 
                              FontSize="12" 
                              Foreground="#718096"/>
                    <TextBlock Text="Apr 2, 2025" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="#2D3748"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>