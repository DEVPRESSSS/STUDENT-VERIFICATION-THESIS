<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms.AddGrade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:viewmodel="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:StudentViewModel}"
        mc:Ignorable="d"
        Title="AddGrade" Height="450" Width="800"
          WindowStartupLocation="CenterScreen"   
          WindowStyle="None"
          Background="Transparent"
          AllowsTransparency="True"
          ResizeMode="NoResize"
        
        >
    <Border CornerRadius="10" Background="#f7f5f5">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!-- Row 0 -->
                <!-- Row 1 -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600" />
                <!-- Column 0 -->
                <ColumnDefinition />
                <!-- Column 1 -->
            </Grid.ColumnDefinitions>


            <TextBlock Text="{Binding Selected_students.StudentID, Mode=TwoWay}" Margin="79,214,24,213" FontFamily="Helvetica Neue" Grid.Row="0" Grid.Column="1" />


            <Border Grid.Row="0" CornerRadius="20,20,20,20" Grid.ColumnSpan="2" Grid.Column="0" Background="White" Margin="10,10,145,10" Effect="{StaticResource formShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Separator -->
                    <Border Grid.Row="0"
                        Height="2"
                        Background="#E4E0E1"
                        Margin="10,42,10,0"
                        VerticalAlignment="Top" />

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Icon -->
                        <Icon:PackIconMaterial Kind="BookEducation" Foreground="#3D7E35" Style="{StaticResource menuButtonIcon}" Margin="12,-33,0,0" Grid.Row="0" VerticalAlignment="Top" />

                        <!-- Title -->

                        <!-- DataGrid Section -->
                        <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                              CellStyle="{DynamicResource DataGridCellStyle1}"
                              x:Name="cashierDataGrid" Style="{DynamicResource DataGridStyle1}"
                               ItemsSource="{Binding SubjectGrades}"
                                  SelectedItem="{Binding Selected_students.Name}"
                         
                              AutoGenerateColumns="False" Margin="0,0,0,86" Height="300" Grid.RowSpan="2">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Subjects ID" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding SubjectID,UpdateSourceTrigger=PropertyChanged}" />
                                <DataGridTextColumn Header="Student Name" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Student.StudentID,UpdateSourceTrigger=PropertyChanged}" />
                                <DataGridTextColumn Header="Subject Name" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Subject.SubjectName,UpdateSourceTrigger=PropertyChanged}" />
                                <DataGridTextColumn Header="Grade" Binding="{Binding GradeValue,Mode=TwoWay}" CanUserResize="False" Width="*" />
                                <DataGridTemplateColumn Header="Action" CanUserResize="False" IsReadOnly="True" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">

                                                <Button Margin="5 0 0 0" Style="{StaticResource gridRemoveButton}">
                                                    <Icon:PackIconMaterial Kind="DeleteOutline" Style="{StaticResource gridButtonIcon}" />
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>


                        </DataGrid>
                        <!-- Save Button -->


                    </Grid>


                </Grid>
            </Border>




            <!-- Content for Row 0, Column 1 -->
            <Border Grid.Row="0"
                 Grid.Column="1" Panel.ZIndex="-1"
                 Background="#3D7E35"
                 Margin="10,0,0,0" 
                 Effect="{StaticResource dropShadow}"
                 CornerRadius="10">

                <Grid>

                    <!--Close button -->
                    <Button x:Name="Close" 
                            Click="Close_Click"
                            Style="{StaticResource MinimizeButtonStyle}"
                         Width="30" Height="30" Margin="150,10,10,410">

                        <Icon:PackIconMaterial 
                             x:Name="CloseWindow"
                             Kind="WindowClose" 
                             Height="10" RenderTransformOrigin="0.803,0.533"
                             Width="12"
                              Style="{StaticResource WindowControlIcon}"
                             Cursor="Hand" HorizontalAlignment="Center"
                         />

                    </Button>

                    <Button Style="{StaticResource SubmitButton}"
                         Content="Save" Margin="57,375,0,45" 
                         Width="123" 
                         HorizontalAlignment="Left"
                         Height="30"
                         Command="{Binding InsertGradeCommand}"
                         BorderBrush="White"
                     />

                    <!--Automation instructions-->
                    <TextBlock TextWrapping="Wrap" 
                    Foreground="White"
                    Margin="64,52,10,331" 
                    FontFamily="Helvetica Neue" 
                    FontSize="14"
                        >
                      Hi Admin! Automate 
                     the student grade insertion 
                     process effortlessly


                    </TextBlock>


                    <!--Automation button-->
                    <Button x:Name="Automation"   
                     Margin="57,150,0,275"
                     Cursor="Hand" BorderBrush="#FFFF"
                     Style="{StaticResource Automation}"
                     BorderThickness="1" HorizontalAlignment="Left" Width="123">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="AutoMode" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Bulk Insert" FontFamily="Roboto" Width="62" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>




                </Grid>
                <!--Instructions -->


            </Border>


        </Grid>
    </Border>

</Window>
