<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms.AddGrade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:viewmodel="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:StudentViewModel}"
        mc:Ignorable="d"
        Title="Add Grade"
        Height="600"
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Border x:Name="MainBorder" CornerRadius="10" Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Header -->
                <RowDefinition Height="*" />
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border x:Name="main" Grid.Row="0" Background="#3D7E35" CornerRadius="10,10,0,0" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <Icon:PackIconMaterial Kind="BookEducation" Foreground="White" Width="20" Height="20" VerticalAlignment="Center" />

                    <TextBlock Text="The University Of Manila Grade Verification" Foreground="White" FontSize="16" FontWeight="Bold" Width="330" />
                    <Button x:Name="Close"
                      Click="Close_Click"
                      Style="{StaticResource MinimizeButtonStyle}"
                     Width="183" Height="30" >

                        <Icon:PackIconMaterial 
                         x:Name="CloseWindow"
                         Kind="WindowClose" 
                         Height="10" RenderTransformOrigin="0.803,0.533"
                         Width="12"
                          Style="{StaticResource WindowControlIcon}"
                         Cursor="Hand" HorizontalAlignment="Center"
                     />

                    </Button>

                </StackPanel>

            </Border>
            <!--Close button -->


            <!-- Content Section -->
            <Border Grid.Row="1" CornerRadius="0,0,10,10" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Separator -->
                        <RowDefinition Height="*" />
                        <!-- DataGrid -->
                        <RowDefinition Height="Auto" />
                        <!-- Button -->
                    </Grid.RowDefinitions>

                    <!-- Separator -->
                    <Rectangle Grid.Row="0" Height="2" Fill="#E4E0E1" VerticalAlignment="Top" />
                    <TextBlock Text="{Binding Selected_students.Name}" FontWeight="DemiBold" FontSize="14" Margin="10,0,333,444" Grid.RowSpan="2"/>
                    <!-- DataGrid Section -->
                    <DataGrid Grid.Row="1" x:Name="cashierDataGrid"
                              ItemsSource="{Binding SubjectGrades}"
                              AutoGenerateColumns="False"
                              RowStyle="{DynamicResource DataGridRowStyle1}" 
                              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                              CellStyle="{DynamicResource DataGridCellStyle1}"
                              Style="{DynamicResource DataGridStyle1}" Margin="0,51,0,40" Grid.RowSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="CourseCode" IsReadOnly="True" Binding="{Binding Subject.CourseCode}" Width="*" />
                            <DataGridTextColumn Header="Professor" IsReadOnly="True" Binding="{Binding Subject.Professors.Name}" Width="*" />
                            <DataGridTextColumn Header="Schedule" IsReadOnly="True" Binding="{Binding Subject.Schedules}" Width="*" />
                            <DataGridTextColumn Header="Grade" Binding="{Binding GradeValue, Mode=TwoWay}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Save Button -->
                    <Button x:Name="print" Grid.Row="2"  Width="100" Height="30" Margin="0,10,0,0" Click="Automation_Click" HorizontalAlignment="Center" Style="{StaticResource Automation}" VerticalAlignment="Bottom">

                        <StackPanel Orientation="Horizontal" >

                            <Icon:PackIconMaterial 
                                 Kind="Printer" 
                                 Height="12" RenderTransformOrigin="0.803,0.533"
                                 Width="12"
                                  Style="{StaticResource WindowControlIcon}"
                                 Cursor="Hand" HorizontalAlignment="Left"/>

                             <TextBlock Text="Print" Width="23" Margin="5"/>
                        </StackPanel>
                        
                    </Button>
                    <TextBlock Text="{Binding Selected_students.IDnumber}" FontWeight="DemiBold" FontSize="14" Margin="331,0,0,444" Grid.RowSpan="2"/>
                    <TextBlock Text="{Binding Selected_students.Program.Acronym}" FontWeight="DemiBold" FontSize="14" Margin="10,22,333,0" Grid.Row="1" Height="24" VerticalAlignment="Top"/>
                    <TextBlock Text="{Binding Selected_students.YearLevel.Name}" FontWeight="DemiBold" FontSize="14" Margin="331,22,10,415" Grid.Row="1"/>

                </Grid>


            </Border>
        </Grid>
    </Border>
</Window>
