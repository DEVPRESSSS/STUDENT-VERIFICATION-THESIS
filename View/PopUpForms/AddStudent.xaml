<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms.AddStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:viewmodel="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:StudentViewModel}"
        mc:Ignorable="d"
        Title="AddStudent" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        
        >


    

    <Border CornerRadius="10" Background="#FFFF" BorderThickness="0.5" BorderBrush="LightGray">



        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#3D7E35" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock  Text="Add Student" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" Margin="20,0,0,0"/>


                    <!--Close button-->
                    <Button x:Name="CloseButton" 
                    Content="✕" FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="Transparent" 
                    BorderThickness="0" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" Margin="0,0,15,0" Cursor="Hand"
                    Click="Close_Click_1"/>
                </Grid>
            </Border>


            <!--Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"  />
                        <!-- First Column -->
                        <ColumnDefinition Width="*" />
                        <!-- Second Column -->
                    </Grid.ColumnDefinitions>

                    <!-- First Column Content -->
                    <Grid Grid.Column="0" Margin="0,0,10,0">



                        <StackPanel Orientation="Vertical">

                            <!--Label for Name-->
                            <TextBlock Text="FirstName:" 
                              FontSize="16"
                              Foreground="#31363F"
                              Margin="0,0,0,10"/>

                            <TextBox x:Name="Name" 
                                   Height="40" 
                                   FontSize="16" 
                                   Padding="10,5" 
                                   MaxLength="50"
                                   Text="{Binding FirstName}"
                                   Background="#F8F8F8" 
                                   BorderBrush="#CCCCCC" 
                                   BorderThickness="1"
                                   PreviewKeyDown="Name_PreviewKeyDown"
                                   PreviewTextInput="Name_PreviewTextInput"
                                   >
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <!--Label for Name-->
                            <TextBlock Text="Middle Initial:" 
                                 FontSize="16"
                                 Foreground="#31363F"
                                 Margin="0,0,0,10"/>

                            <TextBox x:Name="MiddleName" 
                                   Height="40" 
                                   FontSize="16" 
                                   Padding="10,5" 
                                   MaxLength="2"
                                   Text="{Binding MiddleName}"
                                   Background="#F8F8F8" 
                                   BorderBrush="#CCCCCC" 
                                   BorderThickness="1"
                                   PreviewKeyDown="Name_PreviewKeyDown"
                                   PreviewTextInput="Name_PreviewTextInput"
                                   >
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>



                            <!--Label for Name-->
                            <TextBlock Text="Lastname" 
                                      FontSize="16"
                                      Foreground="#31363F"
                                      Margin="0,0,0,10"/>

                            <TextBox x:Name="LastName" 
                                    Height="40" 
                                    FontSize="16" 
                                    Padding="10,5" 
                                    MaxLength="50"
                                    Text="{Binding LastName}"
                                    Background="#F8F8F8" 
                                    BorderBrush="#CCCCCC" 
                                    BorderThickness="1"
                                    PreviewKeyDown="Name_PreviewKeyDown"
                                    PreviewTextInput="Name_PreviewTextInput"
                                    >
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <TextBlock Text="Age:" 
                              FontSize="16"
                              Foreground="#31363F"
                              Margin="0,0,0,10"/>

                            <TextBox x:Name="Age" 
                                BorderThickness="1"
                                Text="{Binding Age, Mode=TwoWay}"
                                MaxLength="2"
                                Background="#F8F8F8" 
                                BorderBrush="#CCCCCC" 
                                FontSize="16" 
                                Padding="10,5" 
                                Height="40" 
                                PreviewTextInput="Contact_PreviewTextInput"
                                PreviewKeyDown="Age_PreviewKeyDown"
                                >

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>




                            <TextBlock Text="ID number:" 
                                 FontSize="16"
                                 Foreground="#31363F"
                                 Margin="0,0,0,10"/>

                            <TextBox x:Name="IDnumber" 
                                 Background="#F8F8F8" 
                                 BorderBrush="#CCCCCC" 
                                 FontSize="16" 
                                 Padding="10,5"                                  
                                 BorderThickness="1"
                                 Text="{Binding IDnumber, Mode=TwoWay}"
                                 MaxLength="10"
                                 Height="40" 
                                 PreviewKeyDown="IDnumber_PreviewKeyDown"
                                 PreviewTextInput="IDnumber_PreviewTextInput"
                                  >

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>



                        



                        </StackPanel>

                    </Grid>

                    <!-- Second Column Content -->
                    <Grid Grid.Column="1" >


                        <StackPanel Orientation="Vertical">

                            <TextBlock Text="Program:" 
                                  FontSize="16"
                                  Foreground="#31363F"
                                  Margin="0,0,0,10"/>


                            <ComboBox Grid.Column="1" 
                                VerticalAlignment="Top"
                                Height="40"
                                BorderBrush="#bab7b6"
                                BorderThickness="1" 
                                ItemsSource="{Binding ProgramsCollection}"
                                DisplayMemberPath="Name" 
                                SelectedValuePath="ProgramID"
                                SelectedValue="{Binding Selected_programID,Mode=TwoWay}"
                                FontSize="16"

                                />


                            <TextBlock Text="Year Level:" 
                                   FontSize="16"
                                   Foreground="#31363F"
                                   Margin="0,0,0,10"/>


                            <ComboBox   
                                  VerticalAlignment="Top"
                                  Height="40"
                                  BorderBrush="#bab7b6"
                                  BorderThickness="1"
                                  FontSize="16"
                                  DisplayMemberPath="Name" 
                                  SelectedValuePath="YearID"
                                  ItemsSource="{Binding YearCollection}"
                                  SelectedValue="{Binding Selected_yearID,Mode=TwoWay}" />



                            <TextBlock Text="Scholarship Type:" 
                                  FontSize="16"
                                  Foreground="#31363F"
                                  Margin="0,0,0,10"/>


                            <ComboBox   
                                 VerticalAlignment="Top"
                                 Height="40"
                                 BorderBrush="#bab7b6"
                                 BorderThickness="1"
                                 FontSize="16"
                                DisplayMemberPath="Name" 
                                SelectedValuePath="ScholarshipID"
                                ItemsSource="{Binding ScholarshipsCollection}"
                                SelectedValue="{Binding Selected_SchoolarID, Mode=TwoWay}" />

                            <TextBlock Text="Address:" 
                                 FontSize="16"
                                 Foreground="#31363F"
                                 Margin="0,0,0,10"/>

                            <TextBox x:Name="Address" 
                                 BorderThickness="1"
                                 Text="{Binding Address, Mode=TwoWay}"
                                 Height="40" 
                                 Background="#F8F8F8" 
                                 BorderBrush="#CCCCCC" 
                                 FontSize="16"
                                 MaxLength="100"
                                 PreviewKeyDown="Address_PreviewKeyDown"
                                 PreviewTextInput="Address_PreviewTextInput"
                                 Padding="10,5"  
                               
                                  >

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <TextBlock Text="Contact:" 
                                FontSize="16"
                                Foreground="#31363F"
                                Margin="0,0,0,10"/>

                            <TextBox x:Name="Contact" 
                                BorderThickness="1"
                                Text="{Binding Contact, Mode=TwoWay}"
                                MaxLength="11"
                                Height="40" 
                                Background="#F8F8F8" 
                                BorderBrush="#CCCCCC" 
                                FontSize="16" 
                                Padding="10,5"  
                                PreviewKeyDown="Contact_PreviewKeyDown"
                                PreviewTextInput="Contact_PreviewTextInput"
                                 >

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>


                    </Grid>
                </Grid>
            </Grid>





            <!--Footer-->

            <Grid Grid.Row="2">

                <Button Style="{StaticResource SubmitButton}"
                     Content="Save"  
                     Width="756" 
                     HorizontalAlignment="Center"
                     FontSize="16"
                     Height="40"
                     BorderThickness="0"  
                     Command="{Binding AddStudentscommand}" Margin="0,5,0,5"

             />

            </Grid>

        </Grid>
    </Border>



</Window>
