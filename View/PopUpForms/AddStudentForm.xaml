<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms.AddStudentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms"
        mc:Ignorable="d"
        Title="Add Student"
        Height="660" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded"
        >


    
    <!--Border-->
    <Border 
        CornerRadius="10"
        BorderBrush="#DDDD"
        BorderThickness="1"
        Background="#F2F2F2">


        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="60"/>
                <RowDefinition/>

            </Grid.RowDefinitions>


            <Border CornerRadius="10,10,0,0" Effect="{StaticResource dropShadow}"
                Background="#3D7E35"/>


            <Border Grid.Row="1" 
                    BorderBrush="#DDDD"
                    BorderThickness="1"
                    Background="#FDFDFD">

                <StackPanel Orientation="Horizontal" >

                    <!--Buttons-->
                    <RadioButton x:Name="UnderGraduate"
                                 HorizontalAlignment="Center"
                                 Checked="UnderGraduate_Checked"
                                 Margin="10,0,0,0"
                                 VerticalAlignment="Center">Undergraduate

                    </RadioButton>
                    
                    <RadioButton x:Name="Alumni" 
                                 VerticalAlignment="Center" 
                                 Checked="UnderGraduate_Checked"
                                 Margin="10,0,0,0"
                                 HorizontalAlignment="Center">
                       Alumni
                    </RadioButton>
                    
                    
                </StackPanel>

            </Border>

            
            <!--Content row -->
            <Border 
                    Margin="1,4,2,1"
                    BorderBrush="DarkGray"
                    BorderThickness="0,0,0,0"
                    Background="#FDFDFD"
                    Grid.Row="2">





                <ContentControl x:Name="MainContentArea">

                    <Border x:Name="DefualtContent">

                        <Image Source="pack://application:,,,/Resources/Default.png"
                              Width="500"
                              Margin="0,8,0,0"/>

                    </Border>    
                    
                    

                </ContentControl>



            </Border>

            

        </Grid>
        
        
        
    </Border>
</Window>
