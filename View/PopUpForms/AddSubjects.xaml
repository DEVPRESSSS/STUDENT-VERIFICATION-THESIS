<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms.AddSubjects"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:viewmodel="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:SubjectsViewModel}"
        mc:Ignorable="d"
        Title="AddSubjects"
          WindowStartupLocation="CenterScreen"
         Height="450" 
          Width="700"
          WindowStyle="None"
          Background="Transparent"
          AllowsTransparency="True"
          ResizeMode="NoResize"
        >
    <Grid>
        <Border CornerRadius="10" Background="White" BorderBrush="#3D7E35" BorderThickness="2">



        </Border>
        <GroupBox Header="Insert Subjects"
          BorderBrush="#3D7E35"
          BorderThickness="1" Margin="10,21,10,10">
        </GroupBox>


        <!--Name label-->

        <Label Content="*Subject Name" Margin="33,64,571,361" RenderTransformOrigin="0.112,0.556"/>

        <!--SubjectName Name-->
        <TextBox 
                 Width="150" Margin="37,94,513,331"
               Text="{Binding SubjectName, Mode=TwoWay}"
            />

        <!--CourseCode label-->
        <Label Content="*CourseCode"
            Margin="33,125,582,300" RenderTransformOrigin="0.112,0.556"/>

        <!--CourseCode textbox-->
        <TextBox 
            Width="150" 
            Margin="37,156,513,269"
            Text="{Binding CourseCode, Mode=TwoWay}"/>


        <!--Phone Lable-->

        <!--Phone textbox-->

        <!--Units label-->
        <Label Content="*Units"
               Margin="241,64,399,361"
               RenderTransformOrigin="0.112,0.556"/>

        <!--Units textbox-->
        <TextBox 
            Width="150"
            Margin="241,94,309,331"
            Text="{Binding Units, Mode=TwoWay}"
            />


        <Label Content="*Program" 
            Margin="452,64,161,361" 
            RenderTransformOrigin="0.112,0.556"/>



        <ComboBox Margin="457,94,41,331"
           ItemsSource="{Binding ProgramsCollection}"
           DisplayMemberPath="Name" 
           SelectedValuePath="ProgramID"
           SelectedValue="{Binding SelectedProgramID, Mode=TwoWay}"
          />

        <!--Button Insert-->
        <Button Style="{StaticResource SubmitButton}" 
            Margin="0,225,41,195"
            Width="622"
            Content="Insert"
            Height="30"
            BorderThickness="0"
            Command="{Binding AddSubjectCommand}"
            />




        <!--Button btnClose -->
        <Button x:Name="CloseBtn" Width="20" 
            Margin="672,3,8,426" 
            Style="{StaticResource MinimizeButtonStyle}"
            Click="CloseBtn_Click"
            >


            <Icon:PackIconMaterial 
                    x:Name="CloseWindow"
                    Kind="WindowClose" 
                    Height="10"
                    Width="12"
                     Foreground="Black"
                     Style="{StaticResource WindowControlIcon}"
                    Cursor="Hand" VerticalAlignment="Top" 
                />
        </Button>


        <TextBox
            Margin="241,156,309,269"
            Text="{Binding Description, Mode=TwoWay}"
            />
        <Label Content="*Description"
            Margin="241,126,382,299"
            RenderTransformOrigin="0.112,0.556"/>
        
        
        <ComboBox Margin="457,156,41,269"
            ItemsSource="{Binding ProfessorCollection}"
            DisplayMemberPath="Name" 
            SelectedValuePath="ProfessorID"
            SelectedValue="{Binding Selected_professorID, Mode=TwoWay}"
          />
        <Label Content="*Professor" 
            Margin="457,126,156,299" 
            RenderTransformOrigin="0.112,0.556"/>
    </Grid>
</Window>
