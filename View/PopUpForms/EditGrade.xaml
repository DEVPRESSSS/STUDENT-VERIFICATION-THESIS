<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms.EditGrade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms"
        mc:Ignorable="d"
        Title="EditGrade"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Height="200"
        Width="400">

    <Border CornerRadius="10" BorderThickness="1" BorderBrush="#DDDDDD" Background="#FFFFFF">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#3D7E35" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock x:Name="GradeTxt" Text="Edit Grade" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <Button x:Name="CloseButton" 
                            Content="✕" FontSize="14"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="Transparent" 
                            BorderThickness="0" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" Margin="0,0,15,0" Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Enter New Grade:" 
                               FontSize="16"
                               Margin="0,0,0,10"/>
                    
                    <TextBox x:Name="GradeTextBox" 
                             Height="40" 
                             FontSize="16" 
                             Padding="10,5" 
                             MaxLength="10"
                             Text="{Binding Selected_grades.GradeValue}"
                             Background="#F8F8F8" 
                             BorderBrush="#CCCCCC" 
                             BorderThickness="1"
                             PreviewKeyDown="GradeTextBox_PreviewKeyDown"
                             >
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>
            </Grid>

        </Grid>
    </Border>
</Window>