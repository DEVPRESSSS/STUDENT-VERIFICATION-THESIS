<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms.InputGrade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:viewmodel="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:GradeViewModel}"
        mc:Ignorable="d"
        Title="InputGrade"
          AllowsTransparency="True"
          WindowStartupLocation="CenterScreen"
          Background="Transparent"
          WindowStyle="None"
          ResizeMode="CanResize"
                  Height="650" Width="1120">
    <Grid>
        <Border CornerRadius="10" Background="#f7f5f5" >

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!-- Row 0 -->
                    <!-- Row 1 -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600" />
                    <!-- Column 0 -->
                    <ColumnDefinition />
                    <!-- Column 1 -->
                </Grid.ColumnDefinitions>




                <Border Grid.Row="0" CornerRadius="20,20,20,20" Grid.ColumnSpan="2" Grid.Column="0" Background="White" Margin="10,10,145,10" Effect="{StaticResource formShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Separator -->
                        <Border Grid.Row="0"
                          Height="2"
                          Background="#E4E0E1"
                          Margin="10,42,10,0"
                          VerticalAlignment="Top" />


                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="468*"/>
                                <ColumnDefinition Width="497*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Icon -->
                            <Icon:PackIconMaterial Kind="Bookshelf" Foreground="#3D7E35" Style="{StaticResource menuButtonIcon}" Margin="12,-33,0,0" Grid.Row="0" VerticalAlignment="Top" Height="15" Width="15" />


                            <!-- DataGrid Section -->
                            <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                            CellStyle="{DynamicResource DataGridCellStyle1}"
                            x:Name="cashierDataGrid" Style="{DynamicResource DataGridStyle1}"
                             AutoGenerateColumns="False"
                             Margin="8,81,8,10" Grid.RowSpan="2"
                             ItemsSource="{Binding StudentCollection }"
                             SelectedItem="{Binding Selected_students}"
                                      >
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Students">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name,UpdateSourceTrigger=PropertyChanged}" 
                                                TextWrapping="Wrap" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Stretch" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Program" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding Program.Acronym,UpdateSourceTrigger=PropertyChanged}" />

                                    <DataGridTextColumn Header="Year" Binding="{Binding YearLevel.Name}"  CanUserResize="False" Width="*" />
                                </DataGrid.Columns>


                            </DataGrid>


                            <Button x:Name="search" Style="{StaticResource SubmitButton}"
                                   Content="View Subs" Margin="0,10,10,0" 
                                   Width="89"
                                   Height="30"
                                   BorderBrush="White"
                                    Grid.Row="1"
                                   Command="{Binding LoadStudentSubs}" VerticalAlignment="Top"
                                    />


                            <ComboBox Margin="0,10,10,0"
                               ItemsSource="{Binding SemesterCollection}"
                               DisplayMemberPath="SemesterName" 
                               SelectedValuePath="SemesterID"
                               Grid.Column="1"
                               Grid.Row="1"
                               SelectedItem="{Binding Selected_semester, UpdateSourceTrigger=PropertyChanged}" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Width="145"
                              />

                            <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                                ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                                CellStyle="{DynamicResource DataGridCellStyle1}"
                                x:Name="cashierDataGrid_Copy" Style="{DynamicResource DataGridStyle1}"
                                ItemsSource="{Binding SubjectsCollection}"
                                SelectedItem="{Binding Selected_subjects}"

                                AutoGenerateColumns="False" Margin="14,81,0,10" Grid.RowSpan="2" Grid.Column="1">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="SubjectName">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SubjectName, UpdateSourceTrigger=PropertyChanged}" 
                                                    TextWrapping="Wrap" 
                                                    VerticalAlignment="Center" 
                                                    HorizontalAlignment="Stretch" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Course Code" IsReadOnly="True" CanUserResize="False" Width="*" Binding="{Binding CourseCode, UpdateSourceTrigger=PropertyChanged}" />

                                    <DataGridTextColumn Header="Semester" Binding="{Binding Semester.SemesterName, Mode=TwoWay}" CanUserResize="False" Width="*" />
                                    <DataGridTextColumn Header="Grade" Binding="{Binding GradeValue, Mode=TwoWay}" CanUserResize="False" Width="*" />
                                </DataGrid.Columns>


                            </DataGrid>
                            <!-- Save Button -->


                        </Grid>


                    </Grid>
                </Border>




                <!-- Content for Row 0, Column 1 -->
                <Border Grid.Row="0"
                   Grid.Column="1" Panel.ZIndex="-1"
                   Background="#3D7E35"
                   Margin="296,0,0,0" 
                   Effect="{StaticResource dropShadow}"
                   CornerRadius="10" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="0.287"/>
                            <RotateTransform/>
                            <TranslateTransform Y="-0.745"/>
                        </TransformGroup>
                    </Border.RenderTransform>

                    <Grid>

                        <!--Close button -->
                        <Button x:Name="Close" 
                      Click="Close_Click"
                      Style="{StaticResource MinimizeButtonStyle}"
                         Width="30" Height="30" Margin="0,5,10,0" RenderTransformOrigin="0.417,-0.256" HorizontalAlignment="Right" VerticalAlignment="Top">

                            <Icon:PackIconMaterial 
                       x:Name="CloseWindow"
                       Kind="WindowClose" 
                       Height="10" RenderTransformOrigin="0.803,0.533"
                       Width="12"
                        
                        Style="{StaticResource WindowControlIcon}"
                       Cursor="Hand" HorizontalAlignment="Center"
                   />

                        </Button>

                        <Button Style="{StaticResource SubmitButton}"
                       Content="Save" Margin="0,0,11,60" 
                       Width="123"
                       Height="30"
                       BorderBrush="White"
                       Command="{Binding InsertCommand}" VerticalAlignment="Bottom"
                        />



                        <Button x:Name="ChooseFileBtn" Style="{StaticResource ClearButton}"
                       Content="Choose File(*xls)" Margin="0,0,11,106" 
                       Width="123"
                       Height="30"
                       BorderBrush="White"
                       Command="{Binding InsertGradeCommand}" VerticalAlignment="Bottom"
                        />

                        <!--Automation instructions-->
                        <TextBlock TextWrapping="Wrap" 
                          Foreground="White"
                          Margin="0,45,0,0" 
                          FontFamily="Helvetica Neue" 
                          FontSize="14" Height="188" VerticalAlignment="Top" HorizontalAlignment="Right" Width="134"
                              >
                            Hi Admin! Automate 
                           the student grade insertion 
                           process effortlessly


                        </TextBlock>

                        <!--Maximize button-->

                        <Button x:Name="Maximize" 
                           Style="{StaticResource MinimizeButtonStyle}" 
                                Width="30" Height="30"
                                Margin="0,5,44,0"
                                Click="Maximize_Click" HorizontalAlignment="Right" VerticalAlignment="Top"
>

                            <Icon:PackIconMaterial 
                                      x:Name="MaximizeWindow"
                                      Kind="WindowMaximize" 
                                      Grid.Column="2"
                                      Height="10" RenderTransformOrigin="0.803,0.533"
                                      Width="12"
                                     Style="{StaticResource WindowControlIcon}"
                                    Cursor="Hand"
                                />

                        </Button>
                        <!--Automation button-->




                    </Grid>
                    <!--Instructions -->


                </Border>


            </Grid>
        </Border>
    </Grid>
</Window>
