<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms.ListOfStudentsToBeGraded"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms" 
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        xmlns:viewmodel="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.ViewModel" 
        d:DataContext="{d:DesignInstance Type=viewmodel:GradeViewModel}"
        mc:Ignorable="d"
        Title="Grade Entry"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"      
        Height="600"
        ResizeMode="CanResizeWithGrip"
        Loaded="Window_Loaded"
        Background="Transparent"
        AllowsTransparency="True"
        Width="650">

    <Border x:Name="DragBorder"
            MouseDown="DragBorder_MouseDown"
            CornerRadius="10" 
            Background="White" 
            BorderBrush="#DDDDDD" 
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Course Info & Controls -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
                <RowDefinition Height="Auto"/>
                <!-- Action Buttons -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="#3D7E35"
                    Height="50"
                    Grid.Row="0"    
                    CornerRadius="10,10,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                        <Icon:PackIconMaterial Kind="ClipboardEdit" 
                                               Width="24" 
                                               Height="24" 
                                               VerticalAlignment="Center" 
                                               Foreground="White" 
                                               Margin="0,0,10,0"/>
                        <TextBlock Text="Grade Entry" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Close Button -->
                </Grid>
            </Border>

            <!-- Course Information and Controls Panel -->
            <Border Grid.Row="1" 
                    Background="#F8F9FA" 
                    Padding="15,10" 
                    BorderThickness="0,0,0,1" 
                    BorderBrush="#DDDDDD">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Course Details -->
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="{Binding Selected_subjects.CourseCode}" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="#3D7E35"/>

                        <TextBlock Text="{Binding Selected_subjects.SubjectName}" 
                                   FontSize="14" 
                                   Margin="0,5,0,0"/>

                        <TextBlock Text="{Binding SubjectEnrolledCollection.Count, StringFormat='Total Students: {0}'}" 
                                   Margin="0,5,0,0" 
                                   FontSize="12" 
                                   Foreground="#6C757D"/>
                    </StackPanel>

                    <!-- School Year Selection -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right">
                        <TextBlock Text="School Year:" 
                                   FontSize="12" 
                                   Margin="0,0,0,5"/>

                        <ComboBox Width="150"
                                  Height="30"
                                  BorderBrush="#DDDDDD"
                                  BorderThickness="1"
                                  ItemsSource="{Binding SchoolYearCollection}"
                                  DisplayMemberPath="SY" 
                                  SelectedValuePath="SchoolYearID"
                                  SelectedValue="{Binding Selected_syID, Mode=TwoWay}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Data Grid -->
            <Grid Grid.Row="2" Margin="15,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Quick Tools -->
                <WrapPanel Grid.Row="0" Margin="0,0,0,10">
                    <Button Content="Sort by Name" 
                            Padding="10,5" 
                            Margin="0,0,5,0" 
                            Background="#F8F9FA" 
                            BorderBrush="#DDDDDD">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="Clear All Grades" 
                            Padding="10,5" 
                            Margin="5,0,0,0" 
                            Background="#F8F9FA" 
                            BorderBrush="#DDDDDD">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                </WrapPanel>

                <!-- Student DataGrid -->
                <DataGrid Grid.Row="1"
                          RowStyle="{DynamicResource DataGridRowStyle1}" 
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                          CellStyle="{DynamicResource DataGridCellStyle1}" 
                          x:Name="studentGradeDataGrid" 
                          Style="{DynamicResource DataGridStyle1}"
                          ItemsSource="{Binding SubjectEnrolledCollection}"
                          AutoGenerateColumns="False"
                          BorderThickness="1"
                          BorderBrush="#DDDDDD"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False">

                    <DataGrid.Resources>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Background" Value="#F8F9FA"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- Student ID (Optional, hidden by default) -->
                        <DataGridTextColumn Header="ID" 
                                            Binding="{Binding Student.StudentID}" 
                                            IsReadOnly="True" 
                                            Width="Auto"
                                            Visibility="Collapsed"/>

                        <!-- Student Name -->
                        <DataGridTextColumn Header="Student Name" 
                                           Binding="{Binding Student.Name}" 
                                           IsReadOnly="True" 
                                           Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Grade ComboBox -->
                        <DataGridTemplateColumn Header="Final Grade" Width="*" IsReadOnly="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox Margin="5"
                                              VerticalAlignment="Center"
                                              BorderBrush="#DDDDDD"
                                              BorderThickness="1"
                                              Height="30"
                                              FontSize="14"
                                              ItemsSource="{Binding Options}"
                                              SelectedItem="{Binding GradeValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True">
                                        <ComboBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="3"/>
                                            </Style>
                                        </ComboBox.Resources>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Notes Column -->
                        <DataGridTemplateColumn Header="Grade Type" Width="1.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Margin="5"
                                             Height="30"
                                             BorderBrush="#DDDDDD"
                                             VerticalContentAlignment="Center"
                                             Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="3"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- Action Buttons -->
            <Border Grid.Row="3" 
                    Background="#F8F9FA" 
                    BorderThickness="0,1,0,0" 
                    BorderBrush="#DDDDDD" 
                    Padding="15,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Progress Status -->
                    <TextBlock Grid.Column="0"
                               Text="Ready to save grades"
                               VerticalAlignment="Center"/>

                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button Content="Cancel" 
                                Width="100" 
                                Height="36"
                                Margin="0,0,10,0"
                                Background="White"
                                BorderBrush="#DDDDDD"
                                Click="Button_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Style="{StaticResource SubmitButton}" 
                                Command="{Binding InsertManualCommand}" 
                                BorderThickness="0" 
                                Content="Save All Grades" 
                                Width="150" 
                                Height="36">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Help Info (Optional) -->
            <Border x:Name="EmptyMessage"
                    Grid.Row="2" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Background="#EDF2FF" 
                    BorderBrush="#B8DAFF" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Padding="15"
                    Visibility="{Binding SubjectEnrolledCollection.Count}">

                
                <StackPanel>
                    <TextBlock Text="No students enrolled" 
                               FontWeight="SemiBold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="There are no students enrolled in this course for the selected school year." 
                               TextWrapping="Wrap" 
                               Margin="0,5,0,0" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>