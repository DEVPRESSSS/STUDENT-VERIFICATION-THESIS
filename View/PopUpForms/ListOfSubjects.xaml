<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms.ListOfSubjects"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms" xmlns:viewmodel="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:StudentViewModel}"
        mc:Ignorable="d"
        Title="ListOfSubjects" 
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Height="500" 
        Width="500">



    <Border CornerRadius="10" BorderThickness="1,0,1,0" BorderBrush="#ccc" Background="White" Effect="{StaticResource dropShadow}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->

            <Border CornerRadius="10,10,0,0" Background="#3D7E35"  >

                <DockPanel  Height="50" LastChildFill="True">
                    <TextBlock Text="{Binding Selected_students.Name}" Width="Auto" Foreground="White" FontSize="20" 
                       VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <Button Content="✖" Foreground="White" Background="Transparent" 
                      BorderThickness="0" FontSize="16" Width="40" 
                      Click="Button_Click"
                      HorizontalAlignment="Right"/>
                    </DockPanel>
            </Border>
          
            
            <ListView Grid.Row="1" Margin="10" BorderThickness="0" 
                      Background="White" Foreground="Black"
                      ItemsSource="{Binding ListOfSubjectsEnrolled}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="5" CornerRadius="5" Background="#F5F5F5" Width="440">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Subject.CourseCode}" FontWeight="SemiBold" FontSize="14" Width="100"/>
                                <TextBlock Text="{Binding Subject.SubjectName}" FontWeight="SemiBold" FontSize="14" Width="Auto"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
    </Border>
   
</Window>
