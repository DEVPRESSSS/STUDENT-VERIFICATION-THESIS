    <Border CornerRadius="10" Background="#FFFF" BorderThickness="0.5" BorderBrush="LightGray">



        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#3D7E35" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock  Text="Edit Professor" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" Margin="20,0,0,0"/>


                    <!--Close button-->
                    <Button x:Name="CloseButton" 
                     Content="✕" FontSize="14"
                     FontWeight="Bold"
                     Foreground="White"
                     Background="Transparent" 
                     BorderThickness="0" 
                     HorizontalAlignment="Right" 
                     VerticalAlignment="Center" Margin="0,0,15,0" Cursor="Hand"
                     Click="CloseBtn_Click"/>
                </Grid>
            </Border>


            <!--Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"  />
                        <!-- First Column -->
                        <ColumnDefinition Width="*" />
                        <!-- Second Column -->
                    </Grid.ColumnDefinitions>

                    <!-- First Column Content -->
                    <Grid Grid.Column="0" Margin="0,0,10,0">



                        <StackPanel Orientation="Vertical">


                            <!--Label for Name-->
                            <TextBlock Text="Name:" 
                                 FontSize="16"
                                 Foreground="#31363F"
                                 Margin="0,0,0,10"/>


                            <!--Name Textbox-->
                            <TextBox x:Name="Name" 
                               Height="40" 
                               FontSize="16" 
                               Padding="10,5" 
                               MaxLength="50"
                               Text="{Binding Selected_professor.Name}"
                               Background="#F8F8F8" 
                               BorderBrush="#CCCCCC" 
                               BorderThickness="1"
                               PreviewKeyDown="Name_PreviewKeyDown"
                               PreviewTextInput="Professor_PreviewTextInput"
                               >
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>



                            <!--Label for Gmail-->
                            <TextBlock Text="Gmail:" 
                               FontSize="16"
                               Foreground="#31363F"
                               Margin="0,0,0,10"/>


                            <!--Gmail Textbox-->
                            <TextBox x:Name="Gmail" 
                                 Height="40" 
                                 FontSize="16" 
                                 Padding="10,5" 
                                 MaxLength="40"
                                 Text="{Binding Selected_professor.Email}"
                                 Background="#F8F8F8" 
                                 BorderBrush="#CCCCCC" 
                                 BorderThickness="1"
                                 PreviewKeyDown="Gmail_PreviewKeyDown"
                                 PreviewTextInput="Gmail_PreviewTextInput"
                                 LostFocus="Gmail_LostFocus"
                             >
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>




                            <!--Label for Age-->
                            <TextBlock Text="Age:" 
                               FontSize="16"
                               Margin="0,0,0,10"
                               Foreground="#31363F"/>


                            <!--Age Textbox-->
                            <TextBox x:Name="Age" 
                                 Height="40" 
                                 FontSize="16" 
                                 Padding="10,5" 
                                 MaxLength="2"
                                 Text="{Binding Selected_professor.Age}"
                                 Background="#F8F8F8" 
                                 BorderBrush="#CCCCCC" 
                                 BorderThickness="1"
                                 PreviewKeyDown="Age_PreviewKeyDown"
                                 PreviewTextInput="Age_PreviewTextInput"
                             >
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>




                            <!--Label for Address-->
                            <TextBlock Text="Address:" 
                                FontSize="16"
                                Foreground="#31363F"
                                Margin="0,0,0,10"/>


                            <!--Age Textbox-->
                            <TextBox x:Name="Address" 
                                  Height="40" 
                                  FontSize="16" 
                                  Padding="10,5" 
                                  MaxLength="100"
                                  Text="{Binding Selected_professor.Address}"
                                  Background="#F8F8F8" 
                                  BorderBrush="#CCCCCC" 
                                  BorderThickness="1"
                              >
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                        </StackPanel>

                    </Grid>

                    <!-- Second Column Content -->
                    <Grid Grid.Column="1" >


                        <StackPanel Orientation="Vertical">


                            <!--Department label-->
                            <TextBlock Text="Department:" 
                              FontSize="16"
                              Margin="0,0,0,10"/>


                            <!--Department Combobox-->

                            <ComboBox 
                                  VerticalAlignment="Top"
                                  BorderBrush="#bab7b6"
                                  BorderThickness="1"
                                  Height="40"
                                  Background="Transparent"
                                  FontSize="16"
                                  ItemsSource="{Binding DepartmentCollection}"
                                  DisplayMemberPath="Name" 
                                  SelectedValuePath="DepartmentID"
                                  SelectedValue="{Binding SelectedDepartmentID, Mode=TwoWay}">


                                <ComboBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="20"/>
                                    </Style>
                                </ComboBox.Resources>

                            </ComboBox>


                        </StackPanel>


                    </Grid>
                </Grid>
            </Grid>





            <!--Footer-->

            <Grid Grid.Row="2">

                <Button Style="{StaticResource SubmitButton}"
                  Content="Save" 
                  Width="552" 
                  HorizontalAlignment="Center"
                  FontSize="16"
                  Height="40"
                  BorderThickness="0"    
                  Command="{Binding UpdateProfessorrsCommand}" VerticalAlignment="Center"/>


            </Grid>

        </Grid>
    </Border>
</Window>
