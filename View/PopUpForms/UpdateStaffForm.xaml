<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms.UpdateStaffForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.PopUpForms" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:viewmodel="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:StaffViewModel}"
        mc:Ignorable="d"
        Title="UpdateStaffForm"
        Height="380" Width="600"
        WindowStartupLocation="CenterScreen"
          WindowStyle="None"
          Background="Transparent"
          AllowsTransparency="True"
          ResizeMode="NoResize">
    <Border CornerRadius="10" Background="#FFFF" BorderThickness="1" BorderBrush="LightGray">



        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#3D7E35" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock  Text="Edit Encoder" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" Margin="20,0,0,0"/>


                    <!--Close button-->
                    <Button x:Name="CloseButton" 
                      Content="✕" FontSize="14"
                      FontWeight="Bold"
                      Foreground="White"
                      Background="Transparent" 
                      BorderThickness="0" 
                      HorizontalAlignment="Right" 
                      VerticalAlignment="Center" Margin="0,0,15,0" Cursor="Hand"
                      Click="Close_Click"/>
                </Grid>
            </Border>


            <!--Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"  />
                        <!-- First Column -->
                        <ColumnDefinition Width="*" />
                        <!-- Second Column -->
                    </Grid.ColumnDefinitions>

                    <!-- First Column Content -->
                    <Grid Grid.Column="0" Margin="0,0,10,0">



                        <StackPanel Orientation="Vertical">


                            <!--Label for Name-->
                            <TextBlock Text="Name:" 
                              FontSize="16"
                              Foreground="#31363F"
                              Margin="0,0,0,10"/>


                            <!--Name Textbox-->
                            <TextBox x:Name="Name" 
                            Height="40" 
                            FontSize="16" 
                            Padding="10,5" 
                            MaxLength="50"
                            Text="{Binding Selected_staff.Name,Mode=TwoWay}"
                            Background="#F8F8F8" 
                            BorderBrush="#CCCCCC" 
                            BorderThickness="1"
                            PreviewKeyDown="Name_PreviewKeyDown"
                            PreviewTextInput="Name_PreviewTextInput"
                            >
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>



                            <!--Label for Gmail-->
                            <TextBlock Text="Gmail:" 
                            FontSize="16"
                            Foreground="#31363F"
                            Margin="0,0,0,10"/>


                            <!--Gmail Textbox-->
                            <TextBox x:Name="Gmail" 
                              Height="40" 
                              FontSize="16" 
                              Padding="10,5" 
                              MaxLength="40"
                              Text="{Binding Selected_staff.Email,Mode=TwoWay}"
                              Background="#F8F8F8" 
                              BorderBrush="#CCCCCC" 
                              BorderThickness="1"
                              LostFocus="Gmail_LostFocus"
                              >
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>




                            <!--Label for Username-->
                            <TextBlock Text="Username:" 
                            FontSize="16"
                            Margin="0,0,0,10"
                            Foreground="#31363F"/>


                            <!--Username Textbox-->
                            <TextBox x:Name="Username" 
                              Height="40" 
                              FontSize="16" 
                              Padding="10,5" 
                              MaxLength="30"
                              Text="{Binding Selected_staff.Username, Mode=TwoWay}"
                              Background="#F8F8F8" 
                              BorderBrush="#CCCCCC" 
                              BorderThickness="1"
                              PreviewKeyDown="Password_PreviewKeyDown"
                              >
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>






                        </StackPanel>

                    </Grid>

                    <!-- Second Column Content -->
                    <Grid Grid.Column="1" >


                        <StackPanel Orientation="Vertical">
                            <!--Label for Password-->
                            <TextBlock Text="Password:" 
                            FontSize="16"
                            Foreground="#31363F"
                            Margin="0,0,0,10"/>


                            <!--Password Textbox-->
                            <TextBox x:Name="Password" 
                              Height="40" 
                              FontSize="16" 
                              Padding="10,5" 
                              MaxLength="100"
                              Text="{Binding Selected_staff.Password, Mode=TwoWay}"
                              PreviewKeyDown="Password_PreviewKeyDown"
                              Background="#F8F8F8" 
                              BorderBrush="#CCCCCC" 
                              BorderThickness="1"
                          >
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <!--RoleCollection label-->
                            <TextBlock Text="Roles:" 
                               FontSize="16"
                               Margin="0,0,0,10"/>


                            <!--RoleCollection Combobox-->

                            <ComboBox 
                               VerticalAlignment="Top"
                               BorderBrush="#bab7b6"
                               BorderThickness="1"
                               Height="40"
                               Background="Transparent"
                               FontSize="16"
                               ItemsSource="{Binding RoleCollection}"
                               DisplayMemberPath="Name" 
                               SelectedValuePath="RoleID"
                               SelectedValue="{Binding Selected_staff.RoleID, Mode=TwoWay}">


                                <ComboBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="20"/>
                                    </Style>
                                </ComboBox.Resources>

                            </ComboBox>


                        </StackPanel>


                    </Grid>
                </Grid>
            </Grid>





            <!--Footer-->

            <Grid Grid.Row="2">

                <Button Style="{StaticResource SubmitButton}"
               Content="Save" 
               Width="552" 
               HorizontalAlignment="Center"
               FontSize="16"
               Height="40"
               BorderThickness="0"    
               Command="{Binding UpdateStaffCommand}" VerticalAlignment="Center"/>


            </Grid>

        </Grid>
    </Border>
</Window>
