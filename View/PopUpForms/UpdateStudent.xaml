    <Border CornerRadius="10" Background="#FFFF" BorderThickness="0.5" BorderBrush="LightGray">



        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#3D7E35" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock  Text="Edit Student" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" Margin="20,0,0,0"/>


                    <!--Close button-->
                    <Button x:Name="CloseButton" 
                         Content="✕" FontSize="14"
                         FontWeight="Bold"
                         Foreground="White"
                         Background="Transparent" 
                         BorderThickness="0" 
                         HorizontalAlignment="Right" 
                         VerticalAlignment="Center" Margin="0,0,15,0" Cursor="Hand"
                         Click="Close_Click"/>
                </Grid>
            </Border>


            <!--Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"  />
                        <!-- First Column -->
                        <ColumnDefinition Width="*" />
                        <!-- Second Column -->
                    </Grid.ColumnDefinitions>

                    <!-- First Column Content -->
                    <Grid Grid.Column="0" Margin="0,0,10,0">



                        <StackPanel Orientation="Vertical">

                            <!--Label for Name-->
                            <TextBlock Text="Name:" 
                                   FontSize="16"
                                   Foreground="#31363F"
                                   Margin="0,0,0,10"/>

                            <TextBox x:Name="NameTxt" 
                                Height="40" 
                                FontSize="16" 
                                Padding="10,5" 
                                MaxLength="50"
                                Text="{Binding Selected_students.Name}"
                                Background="#F8F8F8" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="1"
                                PreviewKeyDown="NameTxt_PreviewKeyDown"
                                PreviewTextInput="NameTxt_PreviewTextInput"
                                >
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>


                            <TextBlock Text="Age:" 
                               FontSize="16"
                               Foreground="#31363F"
                               Margin="0,0,0,10"/>

                            <TextBox x:Name="Agetxt" 
                                 BorderThickness="1"
                                 Text="{Binding Selected_students.Age, Mode=TwoWay}"
                                 MaxLength="2"
                                 Background="#F8F8F8" 
                                 BorderBrush="#CCCCCC" 
                                 FontSize="16" 
                                 Padding="10,5" 
                                 Height="40" 
                                 PreviewTextInput="Contactxt_PreviewTextInput"
                                 PreviewKeyDown="Agetxt_PreviewKeyDown"
                                 >

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>




                            <TextBlock Text="ID number:" 
                                  FontSize="16"
                                  Foreground="#31363F"
                                  Margin="0,0,0,10"/>

                            <TextBox x:Name="IDtxt" 
                                  Background="#F8F8F8" 
                                  BorderBrush="#CCCCCC" 
                                  FontSize="16" 
                                  Padding="10,5"                                  
                                  BorderThickness="1"
                                  Text="{Binding Selected_students.IDnumber, Mode=TwoWay}"
                                  MaxLength="10"
                                  Height="40" 
                                  PreviewKeyDown="IDtxt_PreviewKeyDown"
                                  PreviewTextInput="IDtxt_PreviewTextInput"
                                   >

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>



                            <TextBlock Text="Contact:" 
                                 FontSize="16"
                                 Foreground="#31363F"
                                 Margin="0,0,0,10"/>

                            <TextBox x:Name="Contact" 
                                 BorderThickness="1"
                                 Text="{Binding Selected_students.Contact, Mode=TwoWay}"
                                 MaxLength="11"
                                 Height="40" 
                                 Background="#F8F8F8" 
                                 BorderBrush="#CCCCCC" 
                                 FontSize="16" 
                                 Padding="10,5"  
                                 PreviewKeyDown="Contactxt_PreviewKeyDown"
                                 PreviewTextInput="Contactxt_PreviewTextInput"
                                  >

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>



                        </StackPanel>

                    </Grid>

                    <!-- Second Column Content -->
                    <Grid Grid.Column="1" >


                        <StackPanel Orientation="Vertical">

                            <TextBlock Text="Program:" 
                               FontSize="16"
                               Foreground="#31363F"
                               Margin="0,0,0,10"/>


                            <ComboBox Grid.Column="1" 
                                 VerticalAlignment="Top"
                                 Height="40"
                                 BorderBrush="#bab7b6"
                                 BorderThickness="1" 
                                 ItemsSource="{Binding ProgramsCollection}"
                                 DisplayMemberPath="Name" 
                                 SelectedValuePath="ProgramID"
                                 SelectedValue="{Binding Selected_students.ProgramID,Mode=TwoWay}"
                                 FontSize="16"

                                 />


                            <TextBlock Text="Year Level:" 
                                FontSize="16"
                                Foreground="#31363F"
                                Margin="0,0,0,10"/>


                            <ComboBox   
                               VerticalAlignment="Top"
                               Height="40"
                               BorderBrush="#bab7b6"
                               BorderThickness="1"
                               FontSize="16"
                               DisplayMemberPath="Name" 
                               SelectedValuePath="YearID"
                               ItemsSource="{Binding YearCollection}"
                               SelectedValue="{Binding Selected_students.YearID,Mode=TwoWay}" />



                            <TextBlock Text="Scholarship Type:" 
                               FontSize="16"
                               Foreground="#31363F"
                               Margin="0,0,0,10"/>


                            <ComboBox   
                                  VerticalAlignment="Top"
                                  Height="40"
                                  BorderBrush="#bab7b6"
                                  BorderThickness="1"
                                  FontSize="16"
                                  DisplayMemberPath="Name" 
                                  SelectedValuePath="ScholarshipID"
                                  ItemsSource="{Binding ScholarshipsCollection}"
                                  SelectedValue="{Binding Selected_students.ScholarshipID, Mode=TwoWay}" />

                            <TextBlock Text="Address:" 
                                  FontSize="16"
                                  Foreground="#31363F"
                                  Margin="0,0,0,10"/>

                            <TextBox x:Name="Address" 
                                  BorderThickness="1"
                                  Text="{Binding Selected_students.Address, Mode=TwoWay}"
                                  Height="40" 
                                  Background="#F8F8F8" 
                                  BorderBrush="#CCCCCC" 
                                  FontSize="16"
                                  MaxLength="100"                            
                                  Padding="10,5"  
                            
                               >

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>


                        </StackPanel>


                    </Grid>
                </Grid>
            </Grid>





            <!--Footer-->

            <Grid Grid.Row="2">

                <Button Style="{StaticResource SubmitButton}"
                  Content="Save"  
                  Width="756" 
                  HorizontalAlignment="Center"
                  FontSize="16"
                  Height="40"
                  BorderThickness="0"  
                  Command="{Binding UpdateStudentsCommand}" Margin="0,5,0,5"

          />

            </Grid>

        </Grid>
    </Border>
</Window>
