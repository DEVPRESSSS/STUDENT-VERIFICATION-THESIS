<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.Student.StudentProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.Student" xmlns:viewmodel="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:StudentViewModel}"
        mc:Ignorable="d"
        Title="Student Profile"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Height="700"
        Width="900">

    <!-- Main Border -->
    <Border x:Name="borderdrag" MouseDown="borderdrag_MouseDown"
            Background="#FFFFFF"
            CornerRadius="8"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            Effect="{DynamicResource dropShadow}">

        <Grid>
            <Grid.Resources>
                <!-- Drop Shadow Effect -->
                <DropShadowEffect x:Key="MaterialDropShadow"
                                  BlurRadius="10"
                                  Direction="270"
                                  ShadowDepth="2"
                                  Opacity="0.3"
                                  Color="#555555"/>

                <!-- Default Text Style -->
                <Style x:Key="DefaultTextStyle" TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="Foreground" Value="#333333"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>

                <!-- Label Style -->
                <Style x:Key="LabelStyle" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextStyle}">
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Opacity" Value="0.7"/>
                    <Setter Property="Margin" Value="0,0,0,4"/>
                </Style>

                <!-- Value Style -->
                <Style x:Key="ValueStyle" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextStyle}">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Margin" Value="0,0,0,12"/>
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <!-- Header -->
                <RowDefinition Height="60"/>
                <!-- Student Information -->
                <RowDefinition Height="170"/>
                <!-- Content Area -->
                <RowDefinition Height="*"/>
                <!-- Footer -->
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    CornerRadius="8,8,0,0"
                    Background="#3D7E35">
                <Grid>
                    <TextBlock Text="STUDENT PROFILE"
                               FontFamily="Segoe UI"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,12,0">
                        <Button Width="30"
                                Height="30"
                                Content="✕"
                                FontWeight="Bold"
                                Background="Transparent"
                                Click="Button_Click"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Student Information Section -->
            <Grid Grid.Row="1" Margin="0,0,0,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!-- Profile Image -->
                <StackPanel Grid.Column="0"
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center">

                    <Border Width="100"
                            Height="100"
                            CornerRadius="50"
                            BorderThickness="3"
                            BorderBrush="#3D7E35"
                            Background="White"
                            Effect="{DynamicResource MaterialDropShadow}">


                        <Image Source="{Binding PictureSource}"/>
                    </Border>

                    <!-- Student Name -->
                    <TextBlock
                        Text="{Binding Selected_students.Name}"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#333333"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,2"/>

                    <!-- Student ID -->
                    <Border Background="#F0F8F0"
                            CornerRadius="15"
                            Padding="10,5"
                            BorderBrush="#DAEBD7"
                            Margin="0,0,0,3"
                            BorderThickness="1">
                        <TextBlock Text="{Binding Selected_students.IDnumber}"
                                   FontFamily="Segoe UI"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#3D7E35"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Student Details -->
                <Border Grid.Column="1"
                        Background="#F9FBFA"
                        CornerRadius="8"
                        Margin="20,10,20,10"
                        BorderBrush="#E0E8E0"
                        BorderThickness="1">

                    <Grid Margin="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="PROGRAM" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Selected_students.Program.Acronym}" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="GRANT" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Selected_students.Scholarship.Name}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="GENDER" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="Male" Style="{StaticResource ValueStyle}"/>

                            <TextBlock Text="ADDRESS" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Selected_students.Address}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Content Area -->
            <Border Grid.Row="2"
                    Background="#FAFAFA"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,0,1"
                    Margin="20,0,20,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Tabs -->
                    <Border Grid.Row="0"
                            Background="#F0F0F0"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal" Margin="15,0">
                            <Button Content="Current subjects"
                                    Padding="10,5"
                                    Margin="0,0,5,0"
                                    Click="Button_Click_1"
                                    Background="#F8F9FA"
                                    BorderBrush="#DDDDDD">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button x:Name="GradeBtn" Content="Grades"
                                    Padding="10,5"
                                    Click="GradeBtn_Click"
                                    Margin="0,0,5,0"
                                    Background="#F8F9FA"
                                    BorderBrush="#DDDDDD">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button Content="Enrollment history"
                                    Padding="10,5"
                                    Margin="0,0,5,0"
                                    Background="#F8F9FA"
                                    Click="Button_Click_2"

                                    BorderBrush="#DDDDDD">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Content -->
                    <ContentControl x:Name="MainContentArea" Grid.Row="1" Margin="10"/>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="3"
                    Background="#F5F5F5"
                    CornerRadius="0,0,8,8">
                <Grid>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,20,0">
                        <Button Content="Print Profile"
                                Background="#3D7E35"
                                Foreground="White"
                                Padding="15,8"
                                BorderThickness="0"
                                FontFamily="Segoe UI"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Margin="0,0,10,0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>