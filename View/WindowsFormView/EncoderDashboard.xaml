<Window x:Class="STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.WindowsFormView.EncoderDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STUDENT_VERIFICATION_SYSTEM_THIRD_YEAR_PROJECT.View.WindowsFormView" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="EncoderDashboard"
        Height="650" Width="1120"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">


    
    <Border CornerRadius="10" 
            Background="#F2F8FC">


    
            <!--Grid for the windows formstle-->


        <Grid>

            <Grid.RowDefinitions>

                
                <!--Window forms style row-->
                <RowDefinition Height="40"/>
                
                <!--Content and sidebar row-->
                <RowDefinition/>

                

            
            </Grid.RowDefinitions>

            <!--Border for the first row-->

            <Border Grid.Row="0"
                    Background="#3D7E35"
                    Margin="0,0,0,0"
                    CornerRadius="5,5,0,0"
                    Effect="{StaticResource dropShadow}"
                    >

                <!--Grid for borderstyle design-->
                <Grid Grid.Row="0" Width="200" HorizontalAlignment="Right">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="3"/>
                    </Grid.RowDefinitions>


                    <Grid.ColumnDefinitions>




                        <!--Minimize button-->
                        <ColumnDefinition/>

                        <ColumnDefinition/>

                        <!--Maximize button-->
                        <ColumnDefinition/>

                        <!--Close button-->
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>


                    <TextBlock x:Name="usernametxt" 
                           FontSize="16" 
                           FontWeight="DemiBold"
                           Foreground="White"
                           HorizontalAlignment="Left"
                           Margin="-915,8,0,8" Width="173"/>



                    <!--Bell button-->
                    <!--
                        <Button x:Name="Notif"
                           Style="{StaticResource MinimizeButtonStyle}" Margin="-46,0,46,0" Grid.RowSpan="2"

>
                            <Icon:PackIconMaterial 
                            x:Name="BellIcon"
                            Kind="Bell" 
                            Grid.Column="0"
                            Height="16" RenderTransformOrigin="0.803,0.533"
                            Width="16"
                            Style="{StaticResource WindowControlIcon}"
                            Cursor="Hand"
                            />


                        </Button>-->





                    <!--Minimize button-->
                    <Button x:Name="Minimize" Grid.Column="1" Click="Minimize_Click"
                            Style="{StaticResource MinimizeButtonStyle}" Grid.RowSpan="2"

 >
                        <Icon:PackIconMaterial 
                             x:Name="MinimizeWindow"
                             Kind="Minus" 
                             Grid.Column="1"
                             Height="10" RenderTransformOrigin="0.803,0.533"
                             Width="12"
                             Style="{StaticResource WindowControlIcon}"
                             Cursor="Hand"
                             />


                    </Button>

                    <!--Maximize button-->

                    <Button x:Name="Maximize" Grid.Column="2" Click="Maximize_Click_1"
                           Style="{StaticResource MinimizeButtonStyle}" Grid.RowSpan="2"
>

                        <Icon:PackIconMaterial 
                                      x:Name="MaximizeWindow"
                                      Kind="WindowMaximize" 
                                      Grid.Column="2"
                                      Height="10" RenderTransformOrigin="0.803,0.533"
                                      Width="12"
                                     Style="{StaticResource WindowControlIcon}"
                                    Cursor="Hand"
                                />

                    </Button>


                    <!--Button btnClose -->

                    <Button x:Name="Close" Grid.Column="3" Click="Close_Click"
                           Style="{StaticResource MinimizeButtonStyle}" Grid.RowSpan="2"
>

                        <Icon:PackIconMaterial 
                            x:Name="CloseWindow"
                            Kind="WindowClose" 
                            Grid.Column="3"
                            Height="10" RenderTransformOrigin="0.803,0.533"
                            Width="12"
                             Style="{StaticResource WindowControlIcon}"
                            Cursor="Hand"
                        />

                    </Button>


                </Grid>

       
            </Border>





            <!--Border for the second row-->
            <Border Grid.Row="1"
                 Margin="0,0,0,0"
                 CornerRadius="5,5,0,0"
                 Effect="{StaticResource dropShadow}"
                 >

                <!--Grid that cut into half the second row-->
                <Grid>


            
                    <Grid.ColumnDefinitions>

                        <!--Side bar column-->
                        <ColumnDefinition Width="180"/>
                        
                        <!--Content column-->
                        <ColumnDefinition/>


                    </Grid.ColumnDefinitions>
                    
                    
                    <!--Border for sidebar-->                    
                    <Border Grid.Column="0"
                            CornerRadius="5,5,0,0"
                            Effect="{StaticResource dropShadow}"
                            Background="#F2F8FC"
                            >
                        
                        

                        
                



                        

                   

                        <!--Name of the encoder-->


                        <!--Stackpanel for sidebar-->

                        <StackPanel Orientation="Vertical" 
                                    
                                    HorizontalAlignment="Center"
                                    >

                            <!--Profile picture of Encoder-->

                            <Border Width="80" Height="80" CornerRadius="40" Margin="0,6,0,0">

                                <Ellipse>
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="pack://application:,,,/Resources/LogoUm.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>


                            </Border>
                            

                        


                            <!--Dashboard-->
                            <Button x:Name="DashboardOverview"
                                    Cursor="Hand"
                                    Margin="0,50,0,0"
                                    Style="{StaticResource menuButton}"  
                                    Width="160"
                                    Click="DashboardOverview_Click">
                                
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            >
                                    <Icon:PackIconMaterial 
                                        Kind="Menu"  
                                        Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock 
                                         Text="Home"  
                                         Margin="5,0,0,0" 
                                         FontFamily="Roboto"/>

                                </StackPanel>
                            </Button>




                            <!--Input grade button-->
                            <Button x:Name="Grades" 
                                    Style="{StaticResource menuButton}"  
                                    ToolTip="Input grade"  
                                    Margin="5"
                                    Cursor="Hand"
                                    Width="160"
                                    Click="Grades_Click">
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            >
                                    <Icon:PackIconMaterial 
                                        Kind="PencilBoxMultipleOutline"   
                                        Style="{StaticResource menuButtonIcon}"/>
                                    
                                    <TextBlock 
                                        Text="Encode grade "  
                                        Margin="5,0,0,0" 
                                        FontFamily="Roboto"/>
                                 </StackPanel>
                            </Button>



                            <!--Subjects button-->

                            <Button x:Name="Subjects" 
                                    Style="{StaticResource menuButton}"  
                                    ToolTip="Subjects List" 
                                    Margin="5"
                                    Width="160"
                                    Cursor="Hand" 
                                    Click="Subjects_Click_1">
                                
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center">
                                    
                                    <Icon:PackIconMaterial 
                                        Kind="Bookshelf" 
                                        Style="{StaticResource menuButtonIcon}"/>
                                    
                                     <TextBlock 
                                         Text="Subjects"  
                                         FontFamily="Roboto"
                                         Margin="5,0,0,0" 

                                         />

                             

                                </StackPanel>
                            </Button>


                            <!--Students Button-->
                            <Button x:Name="Students" 
                                    Style="{StaticResource menuButton}" 
                                    ToolTip="Students list"  Margin="5"
                                    Cursor="Hand" 
                                    Click="Students_Click">
                                
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"                                           
                                            >
                                         <Icon:PackIconMaterial Kind="School" 
                                             Style="{StaticResource menuButtonIcon}"/>

                                    <TextBlock 
                                          Text="Students "  
                                          FontFamily="Roboto"
                                          Margin="5,0,0,0" 
                                          />



                                </StackPanel>
                            </Button>


                            <!--Grades Button-->
                            <Button x:Name="Grade" 
                                    Style="{StaticResource menuButton}"
                                    ToolTip="Grades list" 
                                    Margin="5"
                                    Cursor="Hand" 
                                    Click="Grade_Click">
                                
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial 
                                        Kind="ClipboardText"  
                                        Style="{StaticResource menuButtonIcon}"/>

                                    <TextBlock 
                                          Text="Grades "  
                                          FontFamily="Roboto"
                                          Margin="5,0,0,0" 
                                          />


                                </StackPanel>
                            </Button>


                            <!--Settings-->

                            <!--<Button Style="{StaticResource menuButton2}" ToolTip="Settings"  Margin="5"
                           Cursor="Hand"  >
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Cog"   Style="{StaticResource menuButtonIcon}"/>

                                -->
                            <!--
                                                                <TextBlock Text="Settings"  FontFamily="Roboto"/>

                                -->
                                    <!--
                                    </StackPanel>
                                </Button>-->


                            <Button Style="{StaticResource menuButton}" 
                                    ToolTip="Logout"  
                                    Margin="5"
                                     Cursor="Hand"
                                    Click="Button_Click_1" >
                                
                                 <StackPanel Orientation="Horizontal">
                                     
                                    <Icon:PackIconMaterial 
                                        Kind="Logout"  
                                        Style="{StaticResource menuButtonIcon}"/>

                                    <TextBlock 
                                      Text="Log out "  
                                      FontFamily="Roboto"
                                      Margin="5,0,0,0" 

                                      />

                                </StackPanel>
                            </Button>


                        </StackPanel>


                    </Border>
                    
                    
                    
                    <!--Content -->

                    <Border Grid.Column="1"  Margin="5,0,0,0"
                            >


                        <ContentControl x:Name="MainContentArea">



                        </ContentControl>

                    </Border>
                </Grid>
                
                
                
             
                
                
            </Border>


        </Grid>
            
            
    </Border>
</Window>
